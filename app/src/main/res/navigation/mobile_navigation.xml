    app:startDestination="@+id/navigation_my_activities">

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.gymapp.ui.account.AccountFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/navigation_my_activities"
        android:name="com.example.gymapp.ui.my_activities.MyActivitiesFragment"
        android:label="@string/title_my_activities"
        tools:layout="@layout/fragment_my_activities" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.gymapp.ui.calendar.CalendarFragment"
        android:label="@string/title_calendar"
