<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp"
    app:ignore="NamespaceTypo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/textActivityName"
            android:layout_width="163dp"
            android:layout_height="23dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textRoom"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toTopOf="@+id/textInstructor"
            card_view:layout_constraintEnd_toStartOf="@+id/textRoom"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textRoom"
            android:layout_width="94dp"
            android:layout_height="22dp"
            android:layout_marginEnd="104dp"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textActivityName"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textInstructor"
            android:layout_width="163dp"
            android:layout_height="23dp"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/textTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textActivityName"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/textTime"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.539" />

        <TextView
            android:layout_width="163dp"
            android:layout_height="23dp"
            android:text="Plazas libres:"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/textTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textActivityName"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/textTime"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textInstructor"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="39dp"
            android:layout_height="20dp"
            android:layout_marginEnd="160dp"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textInstructor"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textRoom"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textFreeSpots"
            android:layout_width="102dp"
            android:layout_height="22dp"
            android:text=""
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.634"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="80dp"
            android:layout_height="41dp"
            android:text="go"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInstructor"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.555" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>